
<!-- Botão de abertura do modal -->
<button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#exerciseSettingsModal">
    @Localizer["Settings"]
</button>

<!-- Modal de configurações -->
<div class="modal fade" id="exerciseSettingsModal" tabindex="-1" aria-labelledby="exerciseSettingsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exerciseSettingsModalLabel">@Localizer["Exercise Settings"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Localizer["Close"]"></button>
      </div>
      <div class="modal-body">
        <form id="exerciseSettingsForm">
          <div class="mb-3">
            <label class="form-label">@Localizer["Instrument"]</label>
            <select class="form-select" name="Instrument">
              <option>Piano</option>
              <option>Guitar</option>
              <option>Violin</option>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">@Localizer["Note Duration (seconds)"]</label>
            <input type="range" class="form-range" name="NoteDuration" min="0.5" max="3" step="0.1">
          </div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="autoFeedback" name="AutoFeedback">
            <label class="form-check-label" for="autoFeedback">
              @Localizer["Show correct answer automatically"]
            </label>
          </div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="muteSounds" name="MuteSounds">
            <label class="form-check-label" for="muteSounds">
              @Localizer["Mute feedback sounds"]
            </label>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
        <button type="submit" class="btn btn-primary" form="exerciseSettingsForm">@Localizer["Save Settings"]</button>
      </div>
    </div>
  </div>
</div>
