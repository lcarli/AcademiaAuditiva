@{
    ViewData["Title"] = "Academia Auditiva";
}

<section class="text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4 mb-4">🎧 Academia Auditiva</h1>
        <p class="lead">@Localizer["Home.Hero.Subtitle"]</p>
        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg mt-4">@Localizer["Home.Hero.CTA"]</a>
    </div>
</section>

<section class="container py-5">
    <div class="row">
        <div class="col-md-4 text-center">
            <i class="bi bi-music-note-beamed display-4 text-primary"></i>
            <h3 class="mt-3">@Localizer["Home.Feature1.Title"]</h3>
            <p>@Localizer["Home.Feature1.Description"]</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-controller display-4 text-success"></i>
            <h3 class="mt-3">@Localizer["Home.Feature2.Title"]</h3>
            <p>@Localizer["Home.Feature2.Description"]</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-globe2 display-4 text-warning"></i>
            <h3 class="mt-3">@Localizer["Home.Feature3.Title"]</h3>
            <p>@Localizer["Home.Feature3.Description"]</p>
        </div>
    </div>
</section>

<section class="bg-dark text-white text-center py-5">
    <div class="container">
        <h2 class="mb-4">@Localizer["Home.Exercises.Title"]</h2>
        <p>@Localizer["Home.Exercises.Subtitle"]</p>
        <ul class="list-unstyled fs-5">
            <li>@Localizer["Home.Exercises.GuessNote"]</li>
            <li>@Localizer["Home.Exercises.GuessChord"]</li>
            <li>@Localizer["Home.Exercises.GuessInterval"]</li>
            <li>@Localizer["Home.Exercises.GuessQuality"]</li>
            <li>@Localizer["Home.Exercises.GuessFunction"]</li>
        </ul>
        <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg mt-3">@Localizer["Home.Exercises.RegisterCTA"]</a>
    </div>
</section>