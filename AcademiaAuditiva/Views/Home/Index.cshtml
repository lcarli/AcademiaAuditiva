@{
    ViewData["Title"] = "Home";
}

<!-- Cabeçalho chamativo -->
<section class="bg-dark text-white text-center py-5">
    <h1>@Localizer["Home.Title"]</h1>
    <p>@Localizer["Home.Subtitle"]</p>
</section>

<!-- Descrição -->
<section class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" alt="Imagem da Academia Auditiva" class="img-fluid">
        </div>
        <div class="col-md-6">
            <h2>@Localizer["Home.Header"]</h2>
            <p>
                @Localizer["Home.Text1"]
            </p>
            <p>
                Seja você um profissional procurando aprimorar suas habilidades ou alguém simplesmente curioso sobre o mundo do som, a Academia Auditiva tem algo para você.
            </p>
        </div>
    </div>
</section>

<!-- Call-to-action -->
<section class="text-center my-5">
    <h3>@Localizer["Home.Footer"]</h3>
    <p>@Localizer["Home.FooterText"]</p>
    <a class="btn btn-primary" asp-page="/Account/Register" asp-area="Identity">@Localizer["Login.Register"]</a>
    <a class="btn btn-outline-primary" asp-page="/Account/Login" asp-area="Identity">@Localizer["Login.Login"]</a>
</section>