@{
    ViewBag.Title = "Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@Localizer["Dashboard.Title"]</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">@Localizer["Dashboard.TotalExercises"]</h5>
                    <h3 id="totalExercises">0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">@Localizer["Dashboard.BestScore"]</h5>
                    <h3 id="bestScore">0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">@Localizer["Dashboard.TotalTime"]</h5>
                    <h3 id="totalTime">0 min</h3>
                </div>
            </div>
        </div>
    </div>

    <h4 class="text-center mt-5 mb-3">@Localizer["Dashboard.ProgressByExercise"]</h4>
    <canvas id="exerciseProgressChart" height="100"></canvas>

    <h4 class="text-center mt-5 mb-3">@Localizer["Dashboard.StrengthsAndWeaknesses"]</h4>
    <canvas id="accuracyRadarChart" height="100"></canvas>

    <div class="text-center mt-5">
        <a class="btn btn-outline-primary" href="/Exercise/Review">@Localizer["Dashboard.ReviewButton"]</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Simulando dados (substituir por dados reais vindos do controller via ViewBag ou API)
            const exerciseProgress = {
                labels: ["Notas", "Intervalos", "Funções", "Acordes", "Qualidades", "Escalas"],
                data: [70, 85, 60, 90, 75, 65]
            };

            const radarAccuracy = {
                labels: ["Notas", "Acordes", "Escalas", "Intervalos", "Funções", "Qualidade"],
                data: [90, 80, 70, 85, 60, 75]
            };

            // Gráfico de barras
            new Chart(document.getElementById('exerciseProgressChart'), {
                type: 'bar',
                data: {
                    labels: exerciseProgress.labels,
                    datasets: [{
                        label: '@Localizer["Dashboard.CorrectAnswers"]',
                        data: exerciseProgress.data,
                        backgroundColor: 'rgba(54, 162, 235, 0.7)'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true, max: 100 }
                    }
                }
            });

            // Radar de acertos
            new Chart(document.getElementById('accuracyRadarChart'), {
                type: 'radar',
                data: {
                    labels: radarAccuracy.labels,
                    datasets: [{
                        label: '@Localizer["Dashboard.Accuracy"]',
                        data: radarAccuracy.data,
                        fill: true,
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        r: {
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                    }
                }
            });

            // Exibir dados simulados nos cards
            document.getElementById('totalExercises').innerText = 120;
            document.getElementById('bestScore').innerText = 34;
            document.getElementById('totalTime').innerText = "75 min";
        });
    </script>
}