@model AcademiaAuditiva.ViewModels.ExerciseViewModel

@if (!string.IsNullOrEmpty(Model.FeedbackMessage))
{
    var cssClass = Model.FeedbackType == "success" ? "feedback-success" :
                   Model.FeedbackType == "danger" ? "feedback-error" : "alert alert-info";

    <div class="@cssClass">
        <strong>@Model.FeedbackMessage</strong>
    </div>
}