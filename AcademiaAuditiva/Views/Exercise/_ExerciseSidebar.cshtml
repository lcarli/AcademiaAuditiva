@model AcademiaAuditiva.ViewModels.ExerciseViewModel

<div class="d-grid gap-3">
    <button class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#filtersModal">
        @Localizer["Filters"]
    </button>

    <div class="card text-center">
        <div class="card-body">
            <h6 class="text-muted">@Localizer["Score"]</h6>
            <p><strong>@Localizer["Correct"]:</strong> <span id="correctCount">@Model.Score</span></p>
            <p><strong>@Localizer["Errors"]:</strong> <span id="errorCount">@Model.Attempts</span></p>
        </div>
    </div>

    <div class="badge-group">
        <span class="badge bg-success">🎯 5 acertos seguidos</span>
        <span class="badge bg-warning">🔥 Primeiro do dia</span>
    </div>

    <a href="/Exercise" class="btn btn-link">⬅️ @Localizer["Back"]</a>
</div>