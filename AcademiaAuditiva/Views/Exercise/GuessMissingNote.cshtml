@model AcademiaAuditiva.ViewModels.ExerciseViewModel
@{
    ViewBag.Title = Localizer["Exercise.MissingNote.Title"];
    ViewData["FiltersPartial"] = "_ExerciseFilters";
}

<div class="container mt-4">
    @await Html.PartialAsync("_ExerciseHeader", Model)

    <div class="row">
        <div class="col-lg-4">
            @await Html.PartialAsync("_ExerciseInstructions", Model)
        </div>
        <div class="col-lg-8">
            <div class="card shadow-sm p-4">
                <h4 class="text-center mb-3">@Localizer["Exercise.MissingNote.Text"]</h4>

                <!-- WAVEFORM -->
                <div id="waveform" class="mb-4 text-center" style="height: 100px;"></div>

                <!-- BOTÕES DE ÁUDIO -->
                <div class="d-flex justify-content-center gap-3 mb-4">
                    <button class="btn btn-primary" id="playNewMelodies" title="@Localizer["Exercise.PlayMelodies"]">
                        <i class="bi bi-soundwave"></i>
                    </button>
                    <button class="btn btn-outline-secondary" id="replayMelodies"
                        title="@Localizer["Exercise.ReplayMelodies"]">
                        <i class="bi bi-arrow-repeat"></i>
                    </button>
                    <button class="btn btn-outline-primary" id="playMelody1" title="@Localizer["Exercise.Melody1"]">
                        <i class="bi bi-music-note-beamed"></i> 1
                    </button>
                    <button class="btn btn-outline-primary" id="playMelody2" title="@Localizer["Exercise.Melody2"]">
                        <i class="bi bi-music-note-beamed"></i> 2
                    </button>
                </div>

                <!-- RESPOSTAS -->
                <div class="d-flex justify-content-center gap-4 mb-4">
                    <button class="btn btn-outline-success guessAnswer"
                        data-answer="same">@Localizer["Exercise.Same"]</button>
                    <button class="btn btn-outline-danger guessAnswer"
                        data-answer="different">@Localizer["Exercise.Different"]</button>
                </div>

                <div class="text-center">
                    <button id="validateGuess" class="btn btn-success">@Localizer["Exercise.ValidationButton"]</button>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ExerciseFiltersModal", Model)

<div id="localizer" data-incomplete-title="@Localizer["Exercise.IncompleteTitle"]"
    data-incomplete-text="@Localizer["Exercise.SelectNoteText"]"
    data-correct-message="@Localizer["Exercise.CorrectMessage"]"
    data-correct-message-text="@Localizer["Exercise.CorrectMessageText"]"
    data-wrong-message="@Localizer["Exercise.WrongMessage"]"
    data-wrong-message-text="@Localizer["Exercise.WrongMessageText"]">
</div>

@section Scripts {
    <script src="~/js/Exercises/GuessMissingNote.js"></script>
}