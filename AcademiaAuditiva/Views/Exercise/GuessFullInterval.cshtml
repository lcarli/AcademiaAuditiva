@model AcademiaAuditiva.ViewModels.ExerciseViewModel
@{
    ViewBag.Title = Localizer["Exercise.FullInterval.Title"];
    ViewData["FiltersPartial"] = "_ExerciseFilters";
}

<div class="container mt-4">
    @await Html.PartialAsync("_ExerciseHeader", Model)

    <div class="row">
        <div class="col-lg-4">
            @await Html.PartialAsync("_ExerciseInstructions", Model)
        </div>
        <div class="col-lg-8">
            <div class="card shadow-sm p-4">
                <h4 class="text-center mb-3">@Localizer["Exercise.FullIntervalText"]</h4>

                <div id="waveform" class="mb-4 text-center" style="height: 100px;"></div>

                <!-- Botões de áudio -->
                <div class="d-flex justify-content-center gap-3 mb-4">
                    <button class="btn btn-primary" id="playInterval" title="Ouvir novo intervalo">
                        <i class="bi bi-soundwave"></i>
                    </button>
                    <button class="btn btn-outline-secondary" id="replayInterval" title="Reouvir">
                        <i class="bi bi-repeat"></i>
                    </button>
                    <button class="btn btn-outline-primary" id="playNote1" title="Nota 1">
                        <i class="bi bi-1-circle"></i>
                    </button>
                    <button class="btn btn-outline-primary" id="playNote2" title="Nota 2">
                        <i class="bi bi-2-circle"></i>
                    </button>
                </div>


                <!-- Respostas -->
                <div class="d-flex flex-wrap justify-content-center gap-2 mb-4">
                    @foreach (var interval in Model.AnswerOptions)
                    {
                        <button class="btn btn-outline-dark guessInterval" data-interval="@interval">@interval</button>
                    }
                </div>

                <!-- Validar -->
                <div class="text-center">
                    <button id="validateGuess" class="btn btn-success">@Localizer["Exercise.ValidationButton"]</button>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ExerciseFiltersModal", Model)

<div id="localizer" data-incomplete-title="@Localizer["Exercise.IncompleteTitle"]"
    data-incomplete-text="@Localizer["Exercise.SelectIntervalText"]"
    data-correct-message="@Localizer["Exercise.CorrectMessage"]"
    data-correct-message-text="@Localizer["Exercise.CorrectMessageText"]"
    data-wrong-message="@Localizer["Exercise.WrongMessage"]"
    data-wrong-message-text="@Localizer["Exercise.WrongMessageText"]">
</div>

@section Scripts {
    <script src="~/js/Exercises/GuessFullInterval.js"></script>
}