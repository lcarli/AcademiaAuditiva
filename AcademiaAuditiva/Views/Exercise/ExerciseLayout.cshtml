@model AcademiaAuditiva.ViewModels.ExerciseViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <title>@Model.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        @await Html.PartialAsync("_ExerciseHeader", Model)

        <div class="row">
            <div class="col-lg-9">
                @await Html.PartialAsync("_ExerciseFilters", Model.Filters)
                @RenderBody()
            </div>
            <div class="col-lg-3">
                @await Html.PartialAsync("_ExerciseSidebar", Model)
            </div>
        </div>

        @await Html.PartialAsync("_Feedback", Model)
        @await Html.PartialAsync("_ExerciseFooter", Model)
    </div>

    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>