@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de Registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Esta aplicação atualmente não possui um serviço real de envio de e-mails configurado. Veja <a href="https://aka.ms/aspaccountconf">estes documentos</a> para saber como configurar um serviço de envio de e-mails real.
            Normalmente, isso seria enviado por e-mail: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta</a>
        </p>
    }
    else
    {
        <p>
            Por favor, verifique seu e-mail para confirmar sua conta.
        </p>
    }
}
